{
  "name": "simple-form",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "eslint:check": "eslint ./src/**/*.{ts,tsx}",
    "eslint:fix": "npm run eslint:check -- --fix",
    "lint:check": "run-s eslint:check prettier:ts:check stylelint:check",
    "pre-commit": "lint-staged",
    "pre-push": "npm test",
    "prettier:ts:check": "prettier --check ./src/**/*.{ts,tsx}",
    "prettier:ts:fix": "npm run prettier:ts:check -- --write",
    "start": "react-scripts start",
    "stylelint:check": "stylelint ./src/**/*.css",
    "stylelint:fix": "npm run stylelint:check -- --fix",
    "test:local": "react-scripts test --watchAll=false ",
    "test:watch": "react-scripts test",
    "test": "run-s lint:check test:local"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@reduxjs/toolkit": "^1.5.1",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/node": "^12.20.10",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-redux": "^7.1.16",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "react-scripts": "4.0.3",
    "redux-saga": "^1.1.3",
    "typescript": "^4.2.4",
    "web-vitals": "^1.1.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/redux-mock-store": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "redux-mock-store": "^1.5.4",
    "redux-saga-test-plan": "^4.0.1",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0"
  }
}
